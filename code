}

int setupDAC() {
  //COMMAND CODES||||ADRES CODE||||DATA + 4 DONT CARE BITS||||||||||||||||
  dacInputDataWord[0] = 0b00110000; 	
	dacInputDataWord[1] = 0b00110001; 	
	dacInputDataWord[2] = 0b00110010;  
	dacInputDataWord[3] = 0b00110011;
}

