int* adcInputDataWord = (int*)malloc(4*sizeof(byte));
int* dacInputDataWord = (int*)malloc(4*24);
#define dacSelectIntRef 0b011011110000000000000000

int setupADC() {
  //    MUX ADRESS   ||||   INPUT RANGE   ||POWER DOWN SELECTION||
  // sgl/diff|odd sign | select||uni|gain |   NAP   |   SLEEP   |
  adcInputDataWord[0] = 0b00000100; 	
	adcInputDataWord[1] = 0b00010100; 	
	adcInputDataWord[2] = 0b00100100;  
	adcInputDataWord[3] = 0b00110100; 
}

